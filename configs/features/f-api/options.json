{
	"id": "f-api",
	"name": "f-api",
	"type": "API",

	"port": 447,
	"https": false,
    "routes": [
        {
            "path": "/v1/login",
            "type": "SESSION_CREATE"
        },
        {
            "path": "/v1/register",
            "type": "AUTH_CREATE"
        },
        {
            "path": "/v1/users/fetch",
            "type": "FETCH",
            "table": "users",
            "authorField": "id",
            "sensitiveFields": ["password"]
        },
        {
            "path": "/v1/animes/fetch",
            "type": "FETCH",
            "table": "animes"
        },
        {
            "path": "/v1/animes/all/fetch",
            "type": "FETCH_MULTIPLE",
            "table": "animes",
            "disableSelectors": true
        },
        {
            "path": "/v1/animes/episodes/fetch",
            "type": "FETCH_MULTIPLE",
            "table": "episodes",
            "idField": "anime"
        },
        {
            "path": "/v1/groups/fetch",
            "type": "FETCH",
            "table": "groups"
        },
        {
            "path": "/v1/groups/all/fetch",
            "type": "FETCH_MULTIPLE",
            "table": "groups",
            "disableSelectors": true
        },
        {
            "path": "/v1/episodes/fetch",
            "type": "FETCH",
            "table": "episodes"
        },
        {
            "path": "/v1/episodes/all/fetch",
            "type": "FETCH_MULTIPLE",
            "table": "episodes",
            "disableSelectors": true
        },
        {
            "path": "/v1/episodes/segments/fetch",
            "type": "FETCH_MULTIPLE",
            "table": "segments",
            "idField": "episode"
        },
        {
            "path": "/v1/segments/fetch",
            "type": "FETCH",
            "table": "segments"
        },
        {
            "path": "/v1/segments/all/fetch",
            "type": "FETCH_MULTIPLE",
            "table": "segments",
            "disableSelectors": true
        },
        {
            "path": "/v1/stats/fetch",
            "type": "STATS"
        }
    ]
}